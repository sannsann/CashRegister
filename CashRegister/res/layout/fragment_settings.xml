<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="12dp"
            android:text="@string/settings_business_info"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/settings_name"
            style="@style/SettingsTextBox"
            android:hint="Enter Name" />

        <EditText
            android:id="@+id/settings_address1"
            style="@style/SettingsTextBox"
            android:hint="Enter Address (Street)" />

        <EditText
            android:id="@+id/settings_address2"
            style="@style/SettingsTextBox"
            android:hint="Enter Address (City/Zip Code)" />

        <EditText
            android:id="@+id/settings_phoneNum"
            style="@style/SettingsTextBox"
            android:hint="Enter Phone Number"
            android:inputType="phone" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            style="?android:listSeparatorTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:padding="12dp"
            android:text="@string/settings_bluetooth"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/settings_bt_on_radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="On"/>
        <RadioButton
            android:id="@+id/settings_bt_off_radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Off"/>

        <Button
            android:id="@+id/settings_btn_discoverPrinter"
            style="@style/SettingsTextBox"
            android:text="Find BT Printer" />
    </LinearLayout>

</LinearLayout>